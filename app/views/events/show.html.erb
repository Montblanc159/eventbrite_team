<div class="container col-12">
  <div class="card-group">
    <div class="col-8 mr-0 pr-0">
      <section class="card">
        <img class="card-image" src="" alt="">
        <img class="card-img-top wide" src="https://moustique.cdnartwhere.eu/sites/default/files/styles/large/public/field/image/isola-dei-famosi-il-primo-naufrago-e-lattore-rocco-siffredi_0.jpg?itok=1esZr2FF" alt="">
      </section>
    </div>
    <div class="col-4 ml-0 pl-0">
      <div class="card h-100 ">
        <div class="card-body d-flex justify-content-between flex-column">
          <h3 class="card-title text-primary font"><%= @event.title %></h3>
          <p class=""><%= "#{@creator.first_name} #{@creator.last_name}" %></p>
          <p><em>Nombre d'inscrit : <%= @participants.count %></em></p>
          <h6 class="card-subtitle mb-2 text-muted h3"><span class="fas fa-calendar-alt"></span> <%= @event.start_date %></h6>
          <p>Finis le : <%= @event.end_date %></p>
          <div class="">
            <p><span class="fas fa-euro-sign"></span> <%= @event.price %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="col-12">
      <div class="card">
        <div class="card-body d-flex justify-content-between">
          <ul class="social-nav">
            <li class="social-item text-primary"><span class="fab fa-twitter"></span></li>
            <li class="social-item text-primary"><span class="fab fa-facebook"></span></li>
            <li class="social-item text-primary"><span class="fab fa-instagram"></span></li>
          </ul>
          <% if is_not_linked_to?(@creator) %>
          <%= link_to "S'inscrire", new_event_charge_path(@event.id), class:"btn btn-primary" %>
          <% elsif  is_creator?(@creator) %>
          <%= link_to "Gestion de l'évènement", event_attendances_path(@event.id), class:"" %>
          <% end -%>
        </div>
      </div>
    </div>
    <div class="col-8 mr-0 pr-0">
      <section class="card h-100">
        <main class="card-body">
          <p class="card-text"><%= @event.description  %></p>
        </main>
      </section>
    </div>
    <div class="col-4 ml-0 pl-0">
      <div class="card h-100 ">
        <div class="card-body d-flex justify-content-between flex-column">
          <p class="card-text text-primary font"><span class="text-muted"><span class="fas fa-clock"></span> Date et heure:</span><br> Vendredi 20 février 2150</p>
          <div class="">
            <p class="text-muted"><span class="fas fa-map-marker-alt"></span> Lieu: <%= @event.location %> </p>

          </div>
        </div>
      </div>
    </div>
